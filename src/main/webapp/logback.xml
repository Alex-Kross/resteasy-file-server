<configuration>
<!--    debug="false" scan="true" scanPeriod="5 seconds">-->
<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
        <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
</appender>


<property name="LOG_FILE" value="LogFile" />
<property name="LOG_DIR" value="/var/logs/application" />
<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${LOG_DIR}/${LOG_FILE}.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
        <!-- daily rollover -->
        <!--            <fileNamePattern>${LOG_FILE}.%d{yyyy-MM-dd}.gz</fileNamePattern>-->
        <fileNamePattern>target/slf4j/roll-by-time-and-size/app.%d{yyyy-MM-dd-mm}.%i.log.zip</fileNamePattern>

        <!-- keep 30 days' worth of history capped at 3GB total size -->
        <maxFileSize>3KB</maxFileSize>
        <!--            <maxHistory>20</maxHistory>-->
        <!--            <totalSizeCap>3KB</totalSizeCap>-->
    </rollingPolicy>
    <encoder>
        <pattern>%-4relative [%thread] %-5level %logger{35} - %msg%n</pattern>
        <!--            <pattern>%d{yyyy-MM-dd HH:mm:ss} %p %m%n</pattern>-->
    </encoder>
</appender>

<root level="debug" additivity="false">
    <!--        <appender-ref ref="STDOUT" />-->
    <appender-ref ref="FILE" />
</root>
</configuration>